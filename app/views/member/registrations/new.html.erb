<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mb-5 col-3 text-center heading_background_color">新規会員登録</h3>

         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "member/shared/error_messages", resource: resource %>

          <div class="col-12">
            <div class="mb-2">
              <span class="col-3">名前　　　　　　　　　　</span>
              （姓）　<%= f.text_field :last_name, placeholder: "令和"  %>
              （名）　<%= f.text_field :first_name, placeholder: "道子" %>
            </div>

            <div class="mb-2">
              <span class="col-3">　　　　　　　　　　　　</span>
              （セイ）<%= f.text_field :last_name_kana, placeholder: "レイワ" %>
              （メイ）<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
            </div>


            <div class="mb-2">
              <span class="col-3">メールアドレス　　　　　</span>
              　　　　<%= f.email_field :email, placeholder: "example@example.com" %>
            </div>

            <div class="mb-2">
              <span class="col-3">郵便番号（ハイフンなし）</span>
              　　　　<%= f.text_field :postal_code, placeholder: "0000000" %>
            </div>

            <div class="mb-2">
              <span class="col-3">住所　　　　　　　　　　</span>
              　　　　<%= f.text_field :address, size: 50, placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>

            <div class="mb-2">
              <span class="col-3">電話番号（ハイフンなし）</span>
              　　　　<%= f.text_field :phone_number,placeholder: "0000000000" %>
            </div>

            <div class="mb-2">
              <span class="col-3">パスワード（6文字以上）</span>
              <% if @minimum_password_length %>
              <% end %>
            　　 　　<%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="mb-4">
              <span class="col-3">パスワード（確認用）　　</span>
              　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <span class="col-3">　　　　　　　　　　　　</span>
              　　　　<%= f.submit "新規登録", class: "btn btn-success text-white" %>
            </div>
          </div>
        <% end %>

        <h3 class="mt-5 mb-3 heading_background_color col-3 text-center">既に登録済みの方</h3>
        <div class="ml-5">
          <p><%= link_to "こちら", new_member_registration_path, class: 'text-decolation' %>からログインしてください。</p>
        </div>

    </div>
  </div>
</div>