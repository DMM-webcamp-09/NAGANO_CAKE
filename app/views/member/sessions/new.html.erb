
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mb-5 col-3 text-center text-color">ログイン</h4>

      <h5 class="mt-5 mb-4 ml-4 col-4 text-center text-color">会員の方はこちらからログイン</h5>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="field mb-1">
          <%= f.label :email, class: 'col-3'%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field mb-1">
          <%= f.label :password, class: 'col-3' %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions", class: 'col-3'>
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      
       <%= render "member/shared/links" %>
       
    </div>
  </div>
</div>