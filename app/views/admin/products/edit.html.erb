<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h1 class="mt-5">商品編集</h1>
        <%= form_with model: @product,url: admin_product_path, local:true do |f| %>
        <table>
          <tbody>
            <tr>
              <td>
                <h4>商品画像</h4>
              </td>
              <td>
                <%= f.attachment_field :image %>
              </td>
            </tr>
            <tr>
              <td>
                <h4>商品名</h4>
              </td>
              <td>
                <%= f.text_field :name %>
              </td>
            </tr>
            <tr>
              <td>
                <h4>商品説明</h4>
              </td>
              <td>
                <%= f.text_area :descript %>
              </td>
            </tr>
            <tr>
              <td>
                <h4>ジャンル</h4>
              </td>
              <td>
                <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
              </td>
            </tr>
            <tr>
              <td>
                <h4>税抜価格</h4>
              </td>
              <td>
                <%= f.text_field :price %>
              </td>
            </tr>
            <tr>
              <td>
                <h4>販売ステータス</h4>
              </td>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, '販売中', value: true %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, '販売停止中', value: false %>
                <%= f.submit '変更を保存' %>
              </td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</main>