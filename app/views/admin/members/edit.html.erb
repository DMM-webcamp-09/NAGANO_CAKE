<div class="container">
  <div class="row">
    <div class="col">
      <div class="admin-heading col-12">
        <h2 class="mb-4 pt-3 pb-3 text-center"><%= "#{@member.last_name}""#{@member.first_name}" %>様 会員情報編集</h2>
      </div>
      
       <div class="admin-customer-edit col-10 p-3">
        <%= form_with model:@member, url: admin_member_path, method: :patch, local: true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>会員ID</th>
              <td><%= @member.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td><%= f.text_field :last_name, class: "admin-member-editform pt-1 pb-1 rounded-pill" %> <%= f.text_field :first_name, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= f.text_field :last_name_kana, class: "admin-member-editform pt-1 pb-1 rounded-pill" %> <%= f.text_field :first_name_kana, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, size: 70, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :phone_number, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email,  size: 50, class: "admin-member-editform pt-1 pb-1 rounded-pill" %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label :is_deleted, "有効", value: true, class: "mr-3" %>
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label :is_deleted, "退会", value: false %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.submit "変更を保存", class: "btn btn-dark" %>
              </td>
            </tr>
          </tbody>
          <% end %>
          </table>
          </div>
        </div>
  　　</div>
　　</div>
