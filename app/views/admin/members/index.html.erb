<div class="container">
  <div class="row">
    <div class="admin-heading col-3">
      <h2 class="mb-4 pt-3 pb-3 text-center">会員一覧</h2>
    </div>
    
    <div class="col-8 mx-auto">
      <table class="table table-hover rounded-top rounded-bottom table_border_radius admin-customer-table">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td><%= link_to "#{member.last_name} #{member.first_name}", admin_member_path(member.id), class: "text-dark border-bottom border-dark" %></td>
            <td><%= member.email %></td>
            <td>
              <% if member.is_deleted == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
       <%= paginate @members %>
    </div>
  </div>
  
</div>